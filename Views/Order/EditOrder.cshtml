@model HeyHotel.ViewModels.EditOrderViewModel

@{
    string dateStr = @Model.Date.ToString("yyyy-MM-dd");
}

<form method="post" asp-action="EditOrder" asp-controller="Order">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <div>
        <label asp-for="Date"></label>
        <input type="date" asp-for="Date" value="@dateStr" />
        <span asp-validation-for="Date"></span>
    </div>
    <div>
        <label asp-for="Time">Time arriving:</label>
        <input asp-for="Time" type="time" value="@Model.Time" />
        <span asp-validation-for="Time"></span>
    </div>
    <div>
        <label asp-for="NumOfNight">Num of night:</label>
        <input asp-for="NumOfNight" type="number" />
        <span asp-validation-for="NumOfNight"></span>
    </div>
    <div>
        <label asp-for="IsPayed">IsPayed:</label>
        <input asp-for="IsPayed" type="checkbox" />
    </div>
    <button type="submit">Edit order</button>
</form>