@model HeyHotel.ViewModels.EditUserViewModel;

<form method="post" asp-action="EditUser" asp-controller="Admin">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" value="@Model.Name"/>
    </div>
    <div>
        <label asp-for="Sname">SName</label>
        <input type="text" asp-for="Sname" value="@Model.Sname" />
    </div>
    <div>
        <label asp-for="userName">userName</label>
        <input type="text" asp-for="userName" value="@Model.userName"/>
    </div>
    <div>
        <label asp-for="mail">Mail</label>
        <input type="text" asp-for="mail" value="@Model.mail"/>
    </div>
    <div>
        <label asp-for="PhoneNumber">Phone number</label>
        <input type="text" asp-for="PhoneNumber" value="@Model.PhoneNumber"/>
    </div>
    <div>
        <label asp-for="Year">Year</label>
        <input type="text" asp-for="Year" value="@Model.Year" />
    </div>
    <button type="submit">Edit info</button>



</form>